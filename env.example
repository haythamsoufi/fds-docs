LOCAL_LLM_MODEL=llama3.1:8b
LOCAL_LLM_BASE_URL=http://localhost:8090/v1
USE_LOCAL_LLM=true

# Database Configuration
# SQLite (async) is the default local dev database
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Cache Configuration
# Disable Redis by default for local dev; set to true to enable Redis
USE_REDIS=false
# Optional if USE_REDIS=true
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=false

# Document Processing
DOCUMENTS_PATH=./data/documents
VECTOR_DB_PATH=./data/vectordb
# Set to 0 for no limit, or specify max bytes (e.g., 10485760 for 10MB)
MAX_FILE_SIZE=0

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=400
CHUNK_OVERLAP=80

# Token Management Configuration
MAX_INPUT_TOKENS=512
MAX_CONTEXT_TOKENS=400

# OCR Configuration
OCR_ENABLED=true
OCR_DPI=300

# Cloud OCR Configuration (Optional)
# Azure Computer Vision
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Google Vision API
GOOGLE_VISION_CREDENTIALS=path/to/your/google-credentials.json

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_LLM_MODEL=gpt-3.5-turbo
MAX_TOKENS=0
TEMPERATURE=0.1

# Local LLM Configuration (OpenAI-compatible)
USE_LOCAL_LLM=true
LOCAL_LLM_BASE_URL=http://localhost:8090/v1
LOCAL_LLM_MODEL=llama3.1:8b

# LLM Response Configuration
LLM_RESPONSE_MAX_TOKENS=0
LLM_TIMEOUT=0.0
LLM_TEMPERATURE=0.1

# Retrieval Configuration
RETRIEVAL_K=100
RERANK_TOP_K=32
USE_CROSS_ENCODER=true
SIMILARITY_THRESHOLD=0.0

# Performance
BATCH_SIZE=32
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# React UI Configuration
VITE_API_URL=http://localhost:8080
VITE_DEBUG=false